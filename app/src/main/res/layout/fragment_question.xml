<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/v_view_pager_fragment_head"
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:background="@color/primary_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_question_fragment_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_view_pager_fragment_standard_question"
        android:textColor="@color/primary_text"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/v_view_pager_fragment_head"
        app:layout_constraintBottom_toBottomOf="@id/v_view_pager_fragment_head"
        app:layout_constraintEnd_toEndOf="@id/v_view_pager_fragment_head"
        app:layout_constraintStart_toStartOf="@id/v_view_pager_fragment_head"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvQuestionnaire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_view_pager_fragment_head" />

</androidx.constraintlayout.widget.ConstraintLayout>