<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/v_start_fragment_head"
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:background="@color/primary_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_start_fragment_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_start_fragment_message"
        android:textAlignment="center"
        android:textColor="@color/primary_text"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/v_start_fragment_head"
        app:layout_constraintBottom_toBottomOf="@id/v_start_fragment_head"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_start_fragment_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_start_fragment_info"
        android:layout_marginTop="24dp"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/v_start_fragment_head"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/et_start_fragment_number"
        android:hint="@string/str_start_fragment_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:inputType="phone"
        app:layout_constraintTop_toBottomOf="@id/tv_start_fragment_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/et_start_fragment_counting"
        android:hint="@string/str_start_fragment_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@id/et_start_fragment_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/dtn_start_fragment_enter"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="@string/str_start_fragment_enter"
        android:textSize="24sp"
        android:textColor="@color/primary_text"
        app:layout_constraintTop_toBottomOf="@id/et_start_fragment_counting"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>